@model List<BusinessObjects.NewsArticle>

@{
    ViewData["Title"] = "Report Results";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-body">
            <h2 class="text-center text-primary fw-bold mb-4">📊 Report Results</h2>

            <div class="table-responsive">
                <table class="table table-striped table-hover rounded-3">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var news in Model)
                        {
                            <tr>
                                <td>@news.NewsTitle</td>
                                <td>@news.Category?.CategoryName</td>
                                <td>@news.CreatedDate?.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-controller="News" asp-action="Details" asp-route-id="@news.NewsArticleId"
                                       class="btn btn-primary btn-sm custom-btn">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .custom-btn {
        transition: all 0.3s ease;
        font-weight: bold;
    }

        .custom-btn:hover {
            transform: scale(1.1);
        }
</style>
