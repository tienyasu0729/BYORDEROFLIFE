
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["ChooseDashboard"] = "chooseButton";
}

<div class="content" style="width: 100%">
    <h2>Dashboard</h2>

    <div class="card" >
        <div class="card-body">
            <h5>Danh sách cần làm</h5>
            <div class="row text-center">
                <div class="col">0<br>Chờ lấy hàng</div>
                <div class="col">0<br>Đã xử lý</div>
                <div class="col">0<br>Trả hàng / Hoàn tiền / hủy</div>
                <div class="col">0<br>Sản phẩm tạm khoá</div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5>Phân tích bán hàng</h5>
            <p>Hôm nay 00:00 GMT+7 05:00 (Dữ liệu thay đổi so với hôm qua)</p>
