        <script>
        $(document).ready(function(){
               $(document).ready(function(){
        // === Initial Setup: show only Laptop (id = 1) ===
        var initialButton = $("#active-slide-1 .btn-slide#1");
        var initialPosition1 = initialButton.position().left;

        $("#active-slide-1 .active-slide").css({
            left: initialPosition1,
            transition: "left 0.5s"
        });

        // Show only Laptop products (data-category = "1")
        $(".product-box").each(function() {
            var productCategory = $(this).attr('data-category');
            if (productCategory === "1") {
                $(this).parent().show();
            } else {
                $(this).parent().hide();
            }
        });

        // === Click Handler ===
        $("#active-slide-1 .btn-slide").click(function(){
            var activePosition = $(this).position().left;
            var activeSlide = $("#active-slide-1 .active-slide");
            var selectedId = $(this).attr('id');

            // Move the active slide
            activeSlide.css({
                left: activePosition
            });

            // Show/Hide products based on selected button
            $(".product-box").each(function() {
                var productCategory = $(this).attr('data-category');
                if (productCategory === selectedId) {
                    $(this).parent().show();
                } else {
                    $(this).parent().hide();
                }
            });
        });
    });


        var initialPosition2 = $("#active-slide-2 .btn-slide").first().position().left;
        $("#active-slide-2 .active-slide").css({
            left: initialPosition2,
            transition: "left 0.5s"
        });

        $("#active-slide-2 .btn-slide").click(function(){
            var activePosition = $(this).position().left;
            var activeSlide = $("#active-slide-2 .active-slide");
            activeSlide.css({
                left: activePosition
            })
        });
        });
    </script>