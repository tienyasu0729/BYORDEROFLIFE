<!-- Views/Shared/_LoginPartial.cshtml -->
@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <div class="dropdown">
        <a class="btn btn-link dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            Xin chào, @User.Identity.Name
        </a>
        <ul class="dropdown-menu" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Hồ sơ</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="dropdown-item">Đăng xuất</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="User" asp-action="Register">Đăng ký</a>
        </li>
    </ul>
}