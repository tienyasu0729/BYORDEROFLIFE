@model Person

@{
    ViewData["Title"] = "Nhập thông tin";
}

<h2>Nhập thông tin</h2>

<form asp-action="testModelBinding" asp-controller="home" method="post">
    <div class="mb-3">
        <label class="form-label">Tên:</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Tuổi:</label>
        <input type="number" asp-for="Age" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Ghi chú:</label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Gửi</button>
</form>

@if (Model != null)
{
    <hr />
    <h3>Kết quả nhập</h3>
    <p><strong>Tên:</strong> @Model.Name</p>
    <p><strong>Tuổi:</strong> @Model.Age</p>
    <p><strong>Ghi chú:</strong> @Model.Note</p>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
