<Window x:Class="WPFApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Admin Manage" Margin="0,80" FontWeight="Bold" FontSize="30px"></TextBlock>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Manage Customer Information" Width="200" Height="50" Click="ManageCustomer_Click"/>
            <Button Content="Manage Room Information" Width="200" Height="50" Margin="0,20,0,0" Click="ManageRoom_Click"/>
        </StackPanel>
    </Grid>
</Window>
