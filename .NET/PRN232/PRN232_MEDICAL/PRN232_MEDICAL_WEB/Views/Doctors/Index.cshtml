@model IEnumerable<PRN232_MEDICAL_WEB.ViewModels.DoctorViewModel>

@{
    ViewData["Title"] = "Doctors List";
}

<h2>@ViewData["Title"]</h2>
<hr />

@if (User.IsInRole("admin"))
{
    <p>
        <a class="btn btn-success" href="#">Create New Doctor</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Specialty)</th>
            <th>@Html.DisplayNameFor(model => model.Fee)</th>
            <th>@Html.DisplayNameFor(model => model.Available)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Specialty)</td>
                <td>@item.Fee.ToString("C")</td>
                <td>@Html.DisplayFor(modelItem => item.Available)</td>
                <td>
                    @if (User.IsInRole("admin"))
                    {
                        <a href="#">Edit</a>
                        <text>|</text>
                        <a href="#">Delete</a>
                    }

                    @if (User.IsInRole("patient"))
                    {
                        <a href="#">Book Appointment</a>
                    }

                    @if (User.IsInRole("doctor"))
                    {
                        <a href="#">View Appointments</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>