@model FA25_PRN232_MVC.Models.CourseDto

@{
    ViewData["Title"] = Model.Title;
}

<div>
    <h1 style="font-weight: bold; margin-bottom: 20px;">@Model.Title</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mô tả:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Ngày tạo:</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>

    <div class="mt-4">
        <form asp-action="Register" method="post">
            <input type="hidden" name="courseId" value="@Model.CourseId" />
            <button type="submit" class="btn btn-success" style="background-color: #28a745; border-color: #28a745; padding: 10px 20px; font-size: 1.1em;">Đăng ký</button>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-4" style="background-color: #d4edda; color: #155724; border-color: #c3e6cb;">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-4">
        @TempData["ErrorMessage"]
    </div>
}

<div class="mt-4">
    <a asp-action="Index">Quay lại danh sách</a>
</div>


