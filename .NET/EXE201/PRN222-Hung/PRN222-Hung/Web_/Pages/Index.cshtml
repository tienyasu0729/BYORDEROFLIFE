@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Health Care System</title>
    <link rel="stylesheet" href="~/css/landing.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            scroll-behavior: smooth;
            background-color: #f9f9f9;
        }

        .page-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        header {
            background-color: #2e8b57;
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .site-title {
            font-size: 24px;
            font-weight: bold;
        }

        .auth-link {
            display: inline-block;
            margin-left: 10px;
            padding: 8px 16px;
            border-radius: 4px;
            background-color: white;
            color: #2e8b57;
            text-decoration: none;
            font-weight: bold;
            border: 1px solid #2e8b57;
            transition: 0.2s ease-in-out;
        }

            .auth-link:hover {
                background-color: #e0f0e8;
            }


        .banner-img {
            width: 100%;
            height: auto;
            margin-top: 20px;
        }

        .intro {
            text-align: center;
            padding: 40px 20px;
        }

        .toc {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
        }

            .toc a {
                color: #2e8b57;
                text-decoration: none;
                font-size: 18px;
            }

        section {
            padding: 40px 20px;
        }

        .section-title {
            font-size: 22px;
            text-align: center;
            margin-bottom: 20px;
        }

        .image-grid {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

            .image-grid img {
                width: 250px;
                height: 160px;
                object-fit: cover;
                box-shadow: 0 0 8px rgba(0,0,0,0.1);
            }

        footer {
            background-color: #2e8b57;
            color: white;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .footer-left,
        .footer-right {
            flex: 1;
            min-width: 250px;
        }

    </style>
</head>
<body>
    <div class="page-container">
        <header>
            <div class="site-title">Health Care System</div>
            <div class="auth-buttons">
                <a asp-page="/Account/Login" class="auth-link">Đăng nhập</a>
                <a asp-page="/Account/Register" class="auth-link">Đăng ký</a>
            </div>

        </header>

        <img src="/images/LandingPage/2.jpg" alt="Banner" class="banner-img" />

        <div class="intro">
            <h1>Chào mừng bạn đến với dịch vụ chăm sóc sức khỏe</h1>
            <div class="toc">
                <a href="#doingu">Đội ngũ y bác sĩ chuyên nghiệp</a>
                <a href="#trangthietbi">Với trang thiết bị tiên tiến</a>
                <a href="#hotro">Liên hệ ngay để được tư vấn</a>
                <a href="#footer">Đăng nhập đăng ký ngay</a>
            </div>
        </div>

        <section id="doingu">
            <h2 class="section-title">Đội ngũ y bác sĩ chuyên nghiệp</h2>
            <div class="image-grid">
                <img src="/images/LandingPage/bác_sỹ_đoàn_hữu_đông.png" alt="Bác sĩ 1" />
                <img src="/images/LandingPage/images (1).jpg" alt="Bác sĩ 2" />
                <img src="/images/LandingPage/images.jpg" alt="Bác sĩ 3" />
                <img src="/images/LandingPage/2B6A9969-scaled.jpg" alt="Bác sĩ 4" />
            </div>
        </section>

        <section id="trangthietbi">
            <h2 class="section-title">Trang thiết bị tiên tiến</h2>
            <div class="image-grid">
                <img src="/images/LandingPage/equi1.jpg" alt="Thiết bị 1" />
                <img src="/images/LandingPage/equi2.jpg" alt="Thiết bị 2" />
                <img src="/images/LandingPage/equi3.jpg" alt="Thiết bị 3" />
                <img src="/images/LandingPage/equi4.jpg" alt="Thiết bị 4" />
            </div>
        </section>

        <section id="hotro">
            <h2 class="section-title">Liên hệ hỗ trợ</h2>

            @if (Model.ResultMessage != null)
            {
                <div class="alert alert-info mt-3">@Model.ResultMessage</div>
            }

            <form method="post" class="container" style="max-width: 600px;">
                <div class="form-group mb-3">
                    <label>Họ tên</label>
                    <input asp-for="ContactInfo.Name" class="form-control" />
                    <span asp-validation-for="ContactInfo.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Email</label>
                    <input asp-for="ContactInfo.Email" class="form-control" />
                    <span asp-validation-for="ContactInfo.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Tiêu đề</label>
                    <input asp-for="ContactInfo.Subject" class="form-control" />
                    <span asp-validation-for="ContactInfo.Subject" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Nội dung</label>
                    <textarea asp-for="ContactInfo.Message" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="ContactInfo.Message" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" id="btnSend" class="btn btn-primary">
                        <span id="btnText">Gửi</span>
                        <span id="spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>
            </form>
        </section>

        <footer id="footer">
            <div class="footer-container">
                <div class="footer-left">
                    <p><strong>Health Care System</strong></p>
                    <p>Luôn sẵn sàng đồng hành cùng bạn trong mọi hành trình chăm sóc sức khỏe.</p>
                    <p>© 2025 Health Care System. All rights reserved.</p>
                </div>
                <div class="footer-right">
                    <p><strong>Thông tin liên hệ</strong></p>
                    <p>Email: support@healthcare.com</p>
                    <p>Liên hệ: 0123 456 789</p>
                    <p>Địa chỉ: 123 nhà ma, Thành phố Đà Nẵng</p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
