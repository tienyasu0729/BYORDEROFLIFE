@page
@model Web_.Pages.DoctorLeafs.DetailsModel

@{
    ViewData["Title"] = "Chi tiết đơn nghỉ phép";
    Layout = "_LayoutMain";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fa-solid fa-file-lines me-2"></i> Chi tiết đơn nghỉ phép</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DoctorLeaf.LeaveDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DoctorLeaf.LeaveDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DoctorLeaf.Reason)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DoctorLeaf.Reason)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DoctorLeaf.CreatedAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DoctorLeaf.CreatedAt)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DoctorLeaf.IsActive)</dt>
                <dd class="col-sm-9">
                    @if (Model.DoctorLeaf.IsActive)
                    {
                        <span class="badge bg-success">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không hoạt động</span>
                    }
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DoctorLeaf.Doctor)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DoctorLeaf.Doctor.FullName)</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
            </a>
            <a asp-page="./Edit" asp-route-id="@Model.DoctorLeaf.LeaveId" class="btn btn-warning">
                <i class="fa-solid fa-pen-to-square"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>