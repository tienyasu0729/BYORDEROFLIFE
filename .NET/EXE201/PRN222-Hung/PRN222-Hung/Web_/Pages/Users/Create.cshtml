@page
@model Web_.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create User";
    Layout = "_LayoutMain";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fa-solid fa-user-plus me-2"></i> Create New User</h4>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-4">
                    <div class="col-md-3 text-center">
                        <img id="preview" src="@Url.Content(ViewBag.Anh == null ? "~/images/avatar1.jpg" : ViewBag.Anh)"
                             class="rounded-circle border"
                             style="width: 150px; height: 150px; object-fit: cover;" />
                        <input id="ImageFile" type="file" accept="image/*" class="form-control mt-2" />
                        <input type="hidden" id="AvatarPath" asp-for="User.Avatar" />
                        <span asp-validation-for="User.Avatar" class="text-danger d-block"></span>
                    </div>

                    <div class="col-md-9">
                        <div class="mb-3 row">
                            <label asp-for="User.FullName" class="col-sm-4 col-form-label text-end">Full Name</label>
                            <div class="col-sm-6">
                                <input asp-for="User.FullName" class="form-control" />
                                <span asp-validation-for="User.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="User.PhoneNumber" class="col-sm-4 col-form-label text-end">Phone Number</label>
                            <div class="col-sm-6">
                                <input asp-for="User.PhoneNumber" class="form-control" />
                                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="User.Email" class="col-sm-4 col-form-label text-end">Email</label>
                            <div class="col-sm-6">
                                <input asp-for="User.Email" class="form-control" />
                                <span asp-validation-for="User.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="User.Password" class="col-sm-4 col-form-label text-end">Password</label>
                            <div class="col-sm-6">
                                <input asp-for="User.Password" class="form-control" />
                                <span asp-validation-for="User.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label text-end">Gender</label>
                            <div class="col-sm-6">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="User.Gender" value="true" id="genderMale" />
                                    <label class="form-check-label" for="genderMale">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="User.Gender" value="false" id="genderFemale" />
                                    <label class="form-check-label" for="genderFemale">Female</label>
                                </div>
                                <span asp-validation-for="User.Gender" class="text-danger d-block"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="User.Birthday" class="col-sm-4 col-form-label text-end">Birthday</label>
                            <div class="col-sm-6">
                                <input asp-for="User.Birthday" class="form-control" />
                                <span asp-validation-for="User.Birthday" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="User.Role" class="col-sm-4 col-form-label text-end">Role</label>
                            <div class="col-sm-6">
                                <select asp-for="User.Role" class="form-control">
                                    <option value="Patient">Patient</option>
                                    <option value="Doctor">Doctor</option>
                                </select>
                                <span asp-validation-for="User.Role" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row" id="specialtyDiv" style="display: none;">
                            <label class="col-sm-4 col-form-label text-end">Specialty</label>
                            <div class="col-sm-6">
                                <select asp-for="SelectedSpecialtyId" class="form-control">
                                    <option value="">-- Select Specialty --</option>
                                    @foreach (var item in Model.SpecialtyOptions)
                                    {
                                        <option value="@item.Value" selected="@(item.Value == Model.SelectedSpecialtyId?.ToString() ? "selected" : null)">
                                            @item.Text
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="SelectedSpecialtyId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="User.IsActive" class="col-sm-4 col-form-label text-end">Active</label>
                            <div class="col-sm-6 d-flex align-items-center">
                                <input class="form-check-input me-2" asp-for="User.IsActive" />
                                <span asp-validation-for="User.IsActive" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <div class="offset-sm-4 col-sm-6">
                                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-plus me-1"></i> Create</button>
                                <a asp-page="Index" class="btn btn-secondary ms-2"><i class="fa-solid fa-arrow-left me-1"></i> Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/crud.js" asp-append-version="true"></script>
    <script src="~/js/loading.js" asp-append-version="true"></script>
    <script src="~/js/ckeditorBlog.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleSelect = document.querySelector('[name="User.Role"]');
            const specialtyDiv = document.getElementById('specialtyDiv');

            function toggleSpecialty() {
                specialtyDiv.style.display = roleSelect.value === 'Doctor' ? 'block' : 'none';
            }

            toggleSpecialty();
            roleSelect.addEventListener('change', toggleSpecialty);
        });
    </script>

}
