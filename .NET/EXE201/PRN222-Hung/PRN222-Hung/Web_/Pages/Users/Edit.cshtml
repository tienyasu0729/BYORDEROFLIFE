@page
@model Web_.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutMain";
}

<div class="container py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    <div class="row">
        <!-- Avatar section -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <img id="preview" src="@Url.Content(Model.UserEdit.Avatar == null ? "~/images/avatar1.jpg" : Model.UserEdit.Avatar)" class="rounded-circle img-fluid" style="width: 150px; height: 150px; object-fit: cover;">
                    <h5 class="mt-3 fw-bold">@Model.UserEdit.FullName</h5>
                    <p class="text-muted mb-1">@Model.UserEdit.Email</p>
                    <input id="ImageFile" type="file" accept="image/*" class="form-control mt-2">
                    <input type="hidden" id="AvatarPath" asp-for="UserEdit.Avatar" />
                    <span asp-validation-for="UserEdit.Avatar" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Form section -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-white border-bottom text-center">
                    <h5 class="mb-0">Chỉnh sửa thông tin</h5>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="UserEdit.UserId" />

                        <!-- Cột ngang: label ngắn bên trái - input bên phải -->
                        <div class="mb-3 row align-items-center">
                            <label asp-for="UserEdit.FullName" class="col-sm-3 col-form-label">Họ và tên</label>
                            <div class="col-sm-9">
                                <input asp-for="UserEdit.FullName" class="form-control" />
                                <span asp-validation-for="UserEdit.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row align-items-center">
                            <label asp-for="UserEdit.PhoneNumber" class="col-sm-3 col-form-label">Số điện thoại</label>
                            <div class="col-sm-9">
                                <input asp-for="UserEdit.PhoneNumber" class="form-control" />
                                <span asp-validation-for="UserEdit.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row align-items-center">
                            <label asp-for="UserEdit.Email" class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input asp-for="UserEdit.Email" class="form-control" />
                                <span asp-validation-for="UserEdit.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row align-items-center">
                            <label asp-for="UserEdit.Password" class="col-sm-3 col-form-label">Mật khẩu</label>
                            <div class="col-sm-9">
                                <input asp-for="UserEdit.Password" class="form-control" placeholder="Để trống nếu không thay đổi" />
                                <span asp-validation-for="UserEdit.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row align-items-center">
                            <label class="col-sm-3 col-form-label">Giới tính</label>
                            <div class="col-sm-9 d-flex gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="UserEdit.Gender" value="true" id="genderMale" />
                                    <label class="form-check-label" for="genderMale">Nam</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="UserEdit.Gender" value="false" id="genderFemale" />
                                    <label class="form-check-label" for="genderFemale">Nữ</label>
                                </div>
                                <span asp-validation-for="UserEdit.Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row align-items-center">
                            <label asp-for="UserEdit.Birthday" class="col-sm-3 col-form-label">Ngày sinh</label>
                            <div class="col-sm-9">
                                <input asp-for="UserEdit.Birthday" class="form-control" />
                                <span asp-validation-for="UserEdit.Birthday" class="text-danger"></span>
                            </div>
                        </div>

                        @if (Model.IsAdmin)
                        {
                            <div class="mb-3 row align-items-center">
                                <label asp-for="UserEdit.Role" class="col-sm-3 col-form-label">Vai trò</label>
                                <div class="col-sm-9">
                                    <select asp-for="UserEdit.Role" class="form-control">
                                        <option value="Patient">Bệnh nhân</option>
                                        <option value="Doctor">Bác sĩ</option>
                                    </select>
                                    <span asp-validation-for="UserEdit.Role" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 row align-items-center" id="specialtyDiv" style="display: none;">
                                <label class="col-sm-3 col-form-label">Chuyên khoa</label>
                                <div class="col-sm-9">
                                    <select asp-for="SelectedSpecialtyId" class="form-control">
                                        <option value="">-- Chọn chuyên khoa --</option>
                                        @foreach (var item in Model.SpecialtyOptions)
                                        {
                                            <option value="@item.Value" selected="@(item.Value == Model.SelectedSpecialtyId?.ToString() ? "selected" : null)">@item.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="SelectedSpecialtyId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <div class="offset-sm-3 col-sm-9">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="UserEdit.IsActive" />
                                        <label asp-for="UserEdit.IsActive" class="form-check-label">Hoạt động</label>
                                        <span asp-validation-for="UserEdit.IsActive" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="UserEdit.Role" />
                            <input type="hidden" asp-for="UserEdit.IsActive" />
                        }

                        <div class="d-flex justify-content-end gap-2">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                            @if (Model.IsAdmin)
                            {
                                <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/crud.js" asp-append-version="true"></script>
    <script src="~/js/loading.js" asp-append-version="true"></script>
    <script src="~/js/ckeditorBlog.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleSelect = document.querySelector('[name="UserEdit.Role"]');
            const specialtyDiv = document.getElementById('specialtyDiv');

            function toggleSpecialty() {
                specialtyDiv.style.display = roleSelect.value === 'Doctor' ? 'block' : 'none';
            }

            toggleSpecialty();
            roleSelect.addEventListener('change', toggleSpecialty);
        });
    </script>
}