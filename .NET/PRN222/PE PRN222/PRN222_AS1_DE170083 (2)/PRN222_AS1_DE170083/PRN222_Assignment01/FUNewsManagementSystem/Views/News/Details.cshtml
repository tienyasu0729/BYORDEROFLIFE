@model BusinessObjects.NewsArticle

@{
    ViewData["Title"] = Model.NewsTitle;
}

<div class="container-fluid">
    <div class="row">
        @Html.Partial("_Sidebar")

        <!-- Main Content -->
        <main class="col-md-9 col-lg-10 ms-auto p-4" style="overflow-y: auto; height: 100vh;">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h1 class="card-title fw-bold text-primary">@Model.NewsTitle</h1>
                    <p class="text-muted">
                        <strong><i class="bi bi-folder"></i> Category:</strong>
                        <span class="badge bg-secondary">@(Model.Category?.CategoryName ?? "Uncategorized")</span>
                        <br>
                        <strong><i class="bi bi-calendar"></i> Published:</strong>
                        <span class="text-info">@Model.CreatedDate?.ToString("dd MMMM, yyyy")</span>
                    </p>
                    <hr>
                    <article class="fs-5 text-justify">@Html.Raw(Model.NewsContent)</article>
                </div>
            </div>

            <div class="mt-4">
                <a asp-controller="News" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Back to News
                </a>
            </div>
        </main>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.15);
        }

    article {
        line-height: 1.8;
    }
</style>
