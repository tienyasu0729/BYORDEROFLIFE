<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    tools:context=".AddEditItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/them_vat_pham"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="24dp"/>

        <!-- Thông tin chung -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/loai_vat_pham"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/spinnerItemType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:entries="@array/item_types"/> <!-- Dùng entries từ strings.xml -->
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTenNguoiCam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ten_nguoi_cam"
                android:inputType="textPersonName|textCapWords"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTenVatPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ten_vat_pham"
                android:inputType="textCapWords"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGiaTienCam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gia_tien_cam"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:endIconMode="custom"
            app:endIconDrawable="@android:drawable/ic_menu_today"
            app:endIconContentDescription="@string/chon_ngay"
            android:id="@+id/tilNgayCam"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNgayCam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ngay_cam"
                android:inputType="none"
                android:focusable="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGhiChu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ghi_chu"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Thông tin riêng cho XE (ẩn/hiện) -->
        <LinearLayout
            android:id="@+id/layoutVehicleFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thong_tin_xe_va_chu_so_huu"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMaSoCCCD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ma_so_cccd"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dia_chi"
                    android:inputType="textPostalAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBienSoXe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bien_so_xe"
                    android:inputType="textCapCharacters"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Các nút bấm -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLuu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/luu"
            android:padding="14dp"
            app:cornerRadius="12dp"
            android:layout_marginTop="24dp"/>

        <!-- Chỉ hiển thị khi Sửa -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGiaHan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gia hạn (Tính từ hôm nay)"
            android:padding="14dp"
            app:cornerRadius="12dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/status_nearing"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnXoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa vật phẩm này"
            android:padding="14dp"
            app:cornerRadius="12dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/error"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>
</ScrollView>